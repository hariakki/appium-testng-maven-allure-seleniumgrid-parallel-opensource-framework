<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<!--<suite name="Menelic Mobile Tests" verbose="1" parallel="tests" thread-count="5">-->
<suite name="Menelic Mobile Tests" verbose="1">

    <listeners>
        <listener class-name="com.enlightenment.utils.TestListener"/>
    </listeners>


    <test name="iPhone 8 Plus Test Suite on browser stack" verbose="4">
        <parameter name="platformName" value="browser_stack_ios"/>
        <parameter name="platformVersion" value="11"/>
        <parameter name="deviceName" value="iPhone 8 Plus"/>
        <classes>
            <class name="com.enlightenment.mobiletests.InitialTest"/>
        </classes>
    </test>

    <test name="iPhone XS Test Suite on browser stack" verbose="4">
        <parameter name="platformName" value="browser_stack_ios"/>
        <parameter name="platformVersion" value="12"/>
        <parameter name="deviceName" value="iPhone XS"/>
        <classes>
            <class name="com.enlightenment.mobiletests.InitialTest"/>
        </classes>
    </test>
</suite>